<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_info_container"
    android:elevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topic"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="32dp">
            <com.google.android.material.button.MaterialButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                style="@style/IconButtonStyle"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginEnd="16dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/day_date"
                style="@style/MainTextViewStyle"
                android:layout_weight="1"
                android:textSize="24sp"
                tools:text="29081989"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day_temp"
                android:layout_gravity="center"
                style="@style/MainTextViewStyle"
                android:textSize="24sp"
                tools:text="10\u00B0"/>
            <ImageView
                android:id="@+id/day_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                tools:src="@drawable/ic_04d"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:id="@+id/temp"
            app:layout_constraintTop_toBottomOf="@id/topic"
            app:layout_editor_absoluteX="32dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temp_first"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MainTextViewStyle"
                    android:layout_marginBottom="2dp"
                    android:includeFontPadding="false"
                    android:text="@string/temperature"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/topic"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MainTextViewStyle"
                    android:layout_marginBottom="2dp"
                    android:includeFontPadding="false"
                    android:text="@string/feels_like"/>
            </LinearLayout>
            
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>